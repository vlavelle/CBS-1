# Run once:
# install.packages("cbsodataR") #(uncomment this)

library(cbsodataR)

# Downloading table list
toc <- cbs_get_toc() # list of all available tables
toc # incredibly long, not that helpful
# better to already know the identifiers of the datasets that we want to use

# Downloading entire dataset (can take up to 30s)
data <- cbs_get_data("84709NED")
head(data) # gives you a preview of the dataset
# if you want to see the entire dataset just uncomment the following line:
# data

# Downloading metadata - will give you the column headings of the dataset
metadata <- cbs_get_meta("84709NED")
head(metadata)
